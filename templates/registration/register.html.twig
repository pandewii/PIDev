{% extends 'templatelogin/signup.html.twig'%}  


{% block body %}



  

  <style>
.signup-form {
  max-width: 500px;
  margin: 0 auto;
  padding: 20px;
  background-color: #87CEFA;
  border-radius: 5px;
  background: url('assets/img/x.png') no-repeat center center fixed;
  background-size: cover;
}



.signup-form h2 {
  text-align: center;
  margin-bottom: 20px;
}

.form-group {
  margin-bottom: 15px;
}

.form-group label {
  display: block;
  margin-bottom: 5px;
}

.form-group input,
.form-group select {
  width: 100%;
  padding: 10px;
  border-radius: 5px;
  border: none;
  background-color: #e0e0e0;
  font-size: 16px;
}

.form-group select option {
  color: #000;
}

button[type="submit"] {
  display: block;
  margin: 0 auto;
  padding: 10px 20px;
  background-color: #0088cc;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: all 0.3s ease-in-out;
}

button[type="submit"]:hover {
  background-color: #006699;
  transform: scale(1.1);
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}

.form-group input[type="password"] {
  font-family: sans-serif;
}

</style>

<form class="signup-form" action="#" method="post">
  <h2>Create Account</h2>

  {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}


  <div class="form-group">
     {{ form_label(form.name,"name") }}
 
     {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
     {% if form_errors(form.name)is not empty %}
     <div class="alert alert-danger">
     {{form_errors(form.name)}}
     </div>
    {% endif %}
  </div>


  <div class="form-group">
    <label for="email">Email</label>
    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
  </div>


  <div class="form-group">
    <label for="addresse">Address</label>
    {{ form_widget(form.adresse,{'attr':{'class':'form-control'}}) }}
  </div>
<div class="form-group">
    <label for="sexe">gender</label>
    {{ form_widget(form.sexe,{'attr':{'class':'form-control'}}) }}
  </div>

  


  <div class="form-group">
    <label for="cin">CIN</label>
    {{ form_widget(form.cin,{'attr':{'class':'form-control'}}) }}
  </div>



  <div class="form-group">
    <label for="password">Password</label>
    {{ form_widget(form.password.first,{'attr':{'class':'form-control'}}) }}
  </div>





  <div class="form-group">
    <label for="confirm-password">Confirm Password</label>
    <div class="form-group">
    <label for="password">Password</label>
    {{ form_widget(form.password.second,{'attr':{'class':'form-control'}}) }}
  </div>
  </div>
  <button type="submit">Sign Up</button>

  {{form_end(form)}}
</form>



{% endblock %} 